<a class="btn btn-primary mt-4 ml-4" href="/users" role="button">Quay lại</a>

<h1 class="mt-4 ml-4 mb-4">Đánh giá sản phẩm</h1>
<div class="container-fluid pl-4">
  {{#each review}}
    <div class="mt-4 d-flex">
      <img src="{{this.product_id.image}}" width="100px" height="100px">
      <div class="d-flex flex-column ml-2">
        <h4 class="">{{this.product_id.name}}</h5>
        <h6><p class="badge badge-primary p-2">Price: {{this.product_id.price}} VNĐ</p></h5>
      </div>
    </div>
    <div class="border border-primary rounded p-2 mt-2">
      <h6>{{this.user_id.name}}</h6>
      <p>{{this.content}}</p>
    </div>
  {{else}}
    <h5>Chưa có đánh giá!!!</h5>
  {{/each}}
</div>


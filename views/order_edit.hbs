<a class="btn btn-primary mt-4 ml-4" href="/orders" role="button">Quay lại</a>
<div class="container">
    <h1>Cập nhật đơn hàng</h1> 
    <form method="POST" action="/orders/{{order._id}}?_method=PUT">
        <div class="form-group">
            <label for="order_status">Trạng thái</label>
            <select class="form-control" name="orderStatus_id" id="category_id">
                {{#each orderStatus}}
                    <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="mb-4 btn btn-primary">Lưu</button>
    </form>
</div>

<a class="btn btn-primary mt-4 ml-4" href="/products" role="button">Quay lại</a>
<div class="container">
    <h1>Thêm mới sản phẩm</h1> 
    <form method="POST" action="/product-detail/{{productDetail._id}}?_method=PUT">
        <div class="form-group">
            <label for="product_quantity">Số lượng</label>
            <input name="product_quantity" value="{{productDetail.quantity}}" type="text" class="form-control" id="product_quantity" placeholder="Số lượng">
        </div>
        <div class="form-group">
            <label for="product_status">Trạng thái</label>
            <input name="product_status" value="{{productDetail.status}}" type="text" class="form-control" id="product_status" placeholder="Trạng thái">
        </div>
        <div class="form-group">
            <label for="product_desc">Mô tả</label>
            <textarea name="product_desc" type="text" class="form-control" id="product_desc">{{productDetail.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
        {{!-- <button type="submit" class="btn btn-primary">Xóa</button> --}}
    </form>
</div>


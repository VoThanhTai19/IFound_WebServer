<a class="btn btn-primary mt-4 ml-4" href="/categories" role="button">Quay lại</a>
<div class="container">
    <h1>Cập nhật loại sản phẩm</h1>
    <form method="POST" action="/categories/{{category._id}}?_method=PUT">
        <div class="form-group">
            <label for="category">Tên loại sản phẩm</label>
            <input name="category" type="text" class="form-control" id="category" placeholder="Nhập tên sản phẩm" value="{{category.name}}">
        </div>
        <div class="form-group">
            <label for="desc">Mô tả</label>
            <textarea name="desc" class="form-control" id="exampleInputPrice" rows="3">{{category.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>
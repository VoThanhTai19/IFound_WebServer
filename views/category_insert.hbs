<a class="btn btn-primary mt-4 ml-4" href="/categories" role="button">Quay lại</a>
<div class="container">
    <h1>Thêm mới loại sản phẩm</h1>
    <form method="POST" action="/categories/store">
        <div class="form-group">
            <label for="category">Tên loại sản phẩm</label>
            <input name="category" type="text" class="form-control" id="category" placeholder="Nhập tên sản phẩm">
        </div>
        <div class="form-group">
            <label for="desc">Mô tả</label>
            <textarea name="desc" type="text" class="form-control" id="exampleInputPrice" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Thêm loại sản phẩm</button>
    </form>
</div>
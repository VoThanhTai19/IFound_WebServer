<table class="table table-light mt-2">
    <thead>
        <tr> 
            <th scope="col">#</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Giá</th>
            <th scope="col">Loại sản phẩm</th>
        </tr>
    </thead>
    <tbody>
        {{#each getProducts}}
            <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.name}}</td>
                <td>{{this.image}}</td>
                <td>{{this.price}}</td>
                <td>{{this.category_id.name}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

